{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "preserveConstEnums": true, 
    "ignoreDeprecations": "5.0",
    "allowJs": false,
    "suppressImplicitAnyIndexErrors": true, 
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "plugins",
    "lib",
    "src",
    "renderers",
    "alemon.config.ts",
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    ".cache",
    ".output",
    ".vscode",
    ".apps",
    "dist",
    "config",
    "data",
    "logs",
    "help"
  ]
}