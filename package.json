    "restart": "pm2 restart pm2.config.cjs",
    "delete": "pm2 delete pm2.config.cjs",
    "logs": "pm2 logs",
    "list": "pm2 list",
    "startup": "pm2 startup",
    "update": "pm2 update",
    "monit": "pm2 monit",
